// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin", "windows", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum IntervalEnum {
  ONE
  THIRTY
  SIXTY
}

model User {
  id           Int          @id @default(autoincrement())
  username     String       @unique
  email        String       @unique
  passwordHash String?
  coinOptions  CoinOptions?

  @@unique([username, email])
}

model CoinOptions {
  id          Int          @id @default(autoincrement())
  coinNames   String[]     @default([])
  interval    IntervalEnum @default(ONE)
  upperPrice  Float        @default(0)
  middlePrice Float        @default(0)
  lowerPrice  Float        @default(0)
  userId      Int          @unique
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model CryptoCoin {
  id        Int          @id @default(autoincrement())
  currency  String       @default("USD")
  price     Float        @default(0)
  coinId    String       @default("")
  name      String       @default("")
  symbol    String       @default("")
  slug      String       @default("")
  interval  IntervalEnum @default(ONE)
  createdAt DateTime     @default(now())
}
